{
  "compilerOptions": { 
    "strictPropertyInitialization": false,
    "target": "ES2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "outDir": "./dist", 
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*",
       ],
      "@services/*": [
        "src/services/*"
      ],
      "@middlewares/*": [
        "src/middlewares/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@db/*": [
        "src/db/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@web/*": [
        "src/web/*"
      ],
      "*": [
        "*"
      ]
    },
    "typeRoots": [
//      "node_modules/@types/",
//      "./node_modules",
//      "types/",
      "**/*.d.ts"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
